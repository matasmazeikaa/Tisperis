---
export interface Props {
  text?: string;
  classList?: any;
  isEmpty?: any;
  href?: any;
  salDelay?: any;
  onClick?: any;
  id?: string;
}

const { text, classList, isEmpty, href, salDelay, id } = Astro.props;
---

<style>
  .button {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    padding: 1.6rem 2.8rem;
    gap: 12px;
    background-color: var(--red-100);
    border-radius: 1rem;
    font-family: "Quicksand";
    font-size: 1.8rem;
    /* transition: 0.1s al ease-in-out; */
  }

  .button:hover {
    opacity: 0.75;
  }

  .button-empty {
    background-color: transparent;
    border: 1px solid var(--white);
  }
</style>

<a
  id={id}
  href={href}
  data-sal-delay={salDelay}
  data-sal="slide-up"
  target="_blank"
  class:list={[classList, "button", { "button-empty": isEmpty }]}>{text}</a
>
