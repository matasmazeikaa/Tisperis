---
import "@splidejs/splide/css";
import "/node_modules/sal.js/dist/sal.css";

import "@splidejs/splide/css/core";
import BaseHead from "../components/BaseHead.astro";
const currentYear = new Date().getFullYear();

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<script>
  import sal from "sal.js";
  import { disableBodyScroll, clearAllBodyScrollLocks } from "body-scroll-lock";


  sal({
    threshold: 0.2,
    once: true,
    root: null,
  });



  const allScrollRef = document.getElementsByClassName("scrollRef");

  const mytap = window.ontouchstart === null ? "touchstart" : "click";

  for (var i = 0; i < allScrollRef.length; ++i) {
    var item = allScrollRef[i];

    const href = item.getAttribute("href");

    if (!href.includes("#") || window.location.pathname !== "/") {
      continue;
    }

    item.addEventListener(mytap, function (e) {
      e.preventDefault();

      document.querySelector("#checkbox").checked = false;
      clearAllBodyScrollLocks();

      document.querySelector(href.replace("/", "")).scrollIntoView({
        behavior: "smooth",
      });
    });
  }

  document
    .querySelectorAll("#checkbox")[0]
    .addEventListener("change", function (e) {
      if (this.checked) {
        disableBodyScroll(document.querySelector("menu-items"));
      } else {
        clearAllBodyScrollLocks();
      }
    });

  setTimeout(function () {
    let S = document.createElement("script");
    S.type = "text/javascript";

    S.src = "https://code.tidio.co/8qndyl9q0e2bzlwizig77fqlv8y8uw7j.js";

    try {
      document.getElementsByTagName("HEAD")[0].appendChild(S);
    } catch (e) {
      alert(e);
    }
  }, 3000);
</script>

<html lang="en">
  <head>
    <BaseHead />

  </head>

  <body>
    <main>
      <header class="fixed top-0 left-0 right-0 z-20">
        <div
          class="flex nav-container items-center relative justify-between py-40 container"
        >
          <a href="/">
